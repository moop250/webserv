	<error_page>			404 error_pages/404.html;
	<upload_storage>		/foo;
	<cgi_ext>				foo.php;
	<cgi_path>				/foo;
	<allow>					GET DELETE POST;
	location / {
		<allow>			DELETE POST GET;
		<autoindex>		ON;
		<html_index>	hello1.htlm;
	}

	location /tours {
		<autoindexa>		ON;
